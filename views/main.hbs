<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>MONGO DB CRUD</title>
	</head>
	<body>
		<h1>MONGO DB CRUD</h1>
		{{message}}

		<br />
		{{#if edit_id}}
			<h3>Update Book</h3>
			<form action="/update_book/{{edit_id}}" method="POST">
				<label for="title">Title</label>
				<input
					type="text"
					name="title"
					id=""
					value="{{edit_book.name}}"
				/>
				<label for="author">Author</label>
				<input
					type="text"
					name="author"
					id=""
					value="{{edit_book.author}}"
				/>
				<input type="submit" />
			</form>
		{{else}}
			<br />
			<h3>Create</h3>
			<form action="/store_book" method="POST">
				<label for="title">Title</label>
				<input type="text" name="title" id="" />
				<label for="author">Author</label>
				<input type="text" name="author" id="" />
				<input type="submit" />
			</form>
		{{/if}}

		<br />
		<br />

		<ul>
			{{#each books}}
				<li>
					{{this.name}}
					-
					{{this.author}}
					<a href="/?edit_id={{this._id}}">Edit</a>
					<a href="/?delete_id={{this._id}}">Delete</a>
				</li>
			{{/each}}
		</ul>
	</body>
</html>